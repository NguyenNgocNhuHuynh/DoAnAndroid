<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/DangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng nhập"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Email"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DangNhap" />

    <TextView
        android:id="@+id/MatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mật khẩu"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/txt_Email" />

    <EditText
        android:id="@+id/txt_Email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <EditText
        android:id="@+id/txt_MatKhau"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/MatKhau" />

    <Button
        android:id="@+id/btn_DangNhap"
        style="@android:style/Widget.Button.Small"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:text="Đăng nhập"

        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/txt_MatKhau" />

    <TextView
        android:id="@+id/LayLaiMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lấy lại mật khẩu"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_DangNhap" />

    <Button
        android:id="@+id/btn_DangNhapBangFB"
        style="@android:style/Widget.Button.Small"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Đăng nhập bằng Facebook"
        android:drawableStart="@android:drawable/ic_delete"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_DangNhap"
        app:layout_constraintStart_toStartOf="@+id/btn_DangNhap"
        app:layout_constraintTop_toTopOf="@+id/LayLaiMatKhau" />

    <TextView
        android:id="@+id/ChuaCoTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:text="Chưa có tài khoản ?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_DangNhapBangFB" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="Tạo tài khoản"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_DangNhapBangFB"
        app:layout_constraintStart_toEndOf="@+id/ChuaCoTaiKhoan"
        app:layout_constraintTop_toBottomOf="@+id/btn_DangNhapBangFB" />

</androidx.constraintlayout.widget.ConstraintLayout>